@model E_CommerceAssignment.Models.BrandModels

@{
    ViewBag.Title = "AddBrand";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="container" style="width: 30%">
        <div class="form-horizontal">
            <h4>Create Brand</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Brand, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Brand, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Brand, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BrandDetails, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.BrandDetails, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BrandDetails, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
    
}


